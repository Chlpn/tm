<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

         <!--  Transaction master form View -->
        <record model="ir.ui.view" id="transaction_master_form">
            <field name="name">transaction.master.form</field>
            <field name="model">trans.master</field>
            <field name="arch" type="xml">
                <form string="Transaction Master">
                    <sheet>
                    <div class="oe_title">
                    <h1>TRANSACTION NO: <field name="transaction_no" readonly="1"/></h1>
                    </div>
                        <group colspan="4" col="4">
                    <field name="transaction_date" readonly="1"/>
                    <field name="commission_included" readonly="1"/>
                    <field name="amount_to_swipe" readonly="1" string="Amount Swiped"/>
                    <field name="amount_to_customer" readonly="1"/>
                    <field name="commission" readonly="1"/>
                    <field name="cost_to_commission" readonly="1"/>
                    <field name="margin" readonly="1"/>
                    <field name="cash_paid_customer" readonly="1"/>
                    <field name="balance" readonly="1"/>
                    <field name="machine_name" readonly="1"/>
                    <field name="sales_percentage" readonly="1"/>
                    <field name="cost_percentage" readonly="1"/>
                    <field name="customer" readonly="1"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!--  Transaction master tree View -->
        <record model="ir.ui.view" id="transaction_master_tree">
            <field name="name">transaction.master.tree</field>
            <field name="model">trans.master</field>
            <field name="arch" type="xml">
                <tree string="Transaction Master">
                    <field name="transaction_no"/>
                    <field name="transaction_date"/>
                    <field name="machine_name"/>
                    <field name="customer"/>
                    <field name="amount_to_swipe" string="Amount Swiped"/>
                    <field name="amount_to_customer"/>
                    <field name="commission"/>
                    <field name="cost_to_commission"/>
                    <field name="margin"/>
                    <field name="sales_percentage"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_transaction_master">
            <field name="name">Transaction Master</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trans.master</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Transaction Master" id="menu_transaction_master" parent="menu_transaction_management" sequence="2"
                  action="action_transaction_master"/>
    </data>
</odoo>
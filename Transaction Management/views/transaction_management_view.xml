<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

         <!--  Transaction master form View -->
        <record model="ir.ui.view" id="transaction_master_form">
            <field name="name">transaction.master.form</field>
            <field name="model">trans.master</field>
            <field name="arch" type="xml">
                <form string="Transaction Master">
                    <sheet>
                    <div class="oe_title">
                    <h1>TRANSACTION NO: <field name="transaction_no"/></h1>
                    </div>
                    <group colspan="4" col="4">
                    <field name="transaction_date"/>
                    <field name="commission_included"/>
                    <field name="amount_to_swipe"/>
                    <field name="amount_to_customer"/>
                    <field name="commission"/>
                    <field name="cost_to_commission"/>
                    <field name="margin"/>
                    <field name="cash_paid_customer"/>
                    <field name="balance"/>
                    <field name="machine_name"/>
                    <field name="sales_percentage"/>
                    <field name="cost_percentage"/>
                    <field name="customer"/>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_transaction_master">
            <field name="name">Transaction Master</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trans.master</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Transaction Master" id="menu_transaction_master" parent="menu_transaction_management" sequence="1"
                  action="action_transaction_master"/>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

         <!--  Transaction master form View -->
        <record model="ir.ui.view" id="transaction_form">
            <field name="name">transaction.form</field>
            <field name="model">trans.master</field>
            <field name="arch" type="xml">
                <form string="Transaction">
                    <sheet>
                    <div class="oe_title">
                    <h1>TRANSACTION NO: <field name="transaction_no" readonly="1"/></h1>
                    </div>
                        <group colspan="4" col="4">
                    <field name="transaction_date"/>
                    <field name="machine_name"/>
                    <field name="sales_percentage"/>
                    <field name="commission_included"/>
                    <field name="amount_to_swipe" attrs="{'readonly': [('commission_included', '=', False)]}" />
                    <field name="amount_to_customer" attrs="{'readonly': [('commission_included', '=', True)]}" />
                    <field name="commission" readonly="1"/>
                    <field name="cash_paid_customer"/>
                    <field name="balance"/>
                    <field name="customer"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!--  Transaction master tree View -->
        <record model="ir.ui.view" id="transaction_tree">
            <field name="name">transaction.tree</field>
            <field name="model">trans.master</field>
            <field name="arch" type="xml">
                <tree string="Transaction">
                    <field name="transaction_no"/>
                    <field name="transaction_date"/>
                    <field name="machine_name"/>
                    <field name="customer"/>
                    <field name="amount_to_swipe" string="Amount Swiped"/>
                    <field name="amount_to_customer"/>
                    <field name="commission"/>
                    <field name="sales_percentage"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_transaction">
            <field name="name">Transaction</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trans.master</field>
            <field name="context">{'readonly_by_pass': True}</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="seq_transaction" model="ir.sequence">
            <field name="name">Transaction</field>
            <field name="code">trans.master</field>
            <field name="prefix">T</field>
            <field name="padding">4</field>
        </record>

        <menuitem name="Transaction" id="menu_transaction" parent="menu_transaction_management" sequence="1"
                  action="action_transaction"/>
    </data>
</odoo>
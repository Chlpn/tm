<?xml version="1.0" encoding="utf-8"?>

<odoo>


    
        <record id="account_custom_customer_statement_report_view" model="ir.ui.view">
        <field name="name">Statement of Account (Customers)</field>
        <field name="model">custom.customer.statement</field>
        <field name="arch" type="xml">
        <form string="Report Options">
            <group col="4">
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="partner_id"/>
                <field name="account_id"/>
                
            </group>
         
            <footer>
                <button name="print_report" string="Print" type="object" default_focus="1" class="oe_highlight"/>
                or 
                <button string="Cancel" class="oe_link" special="cancel" />
            </footer>
        </form>
        </field>
        </record>

    <record id="action_custom_customer_statement_menu" model="ir.actions.act_window">
        <field name="name">Statement of Account (Customers)</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">custom.customer.statement</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
<!--        <field name="view_id" ref="account_custom_ledger_report_view"/>-->
        <field name="target">new</field>
    </record>

    <menuitem id="menu_custom_customer_statement_report"
        name="SOA (Customers)"
        parent="ledger_report.enhance_reporting_custom"
        action="action_custom_customer_statement_menu"/>

    <record id="action_custom_ledger_report_values1" model="ir.values">
        <field name="model_id" ref="account.model_account_account" />
        <field name="name">Custom ledger</field>
        <field name="key2">client_print_multi</field>
        <field name="value" eval="'ir.actions.act_window,' +str(ref('action_custom_ledger_menu'))" />
        <field name="key">action</field>
        <field name="model">account.account</field>
    </record>

</odoo>

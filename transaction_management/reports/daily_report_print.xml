<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="daily_print_report">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.internal_layout">
                        <div class="page">
                            <div style="text-align:center;">
                            <h2><span  t-esc="res_company.name"/></h2>k
                                <h3><span>DAILY REPORT </span></h3>
                            </div>

                            <div style="margin-left:auto;margin-right:auto;text-align:center;">Branch Name:-<span t-esc="o.report_branch"/></div>
                            <div style="margin-left:auto;margin-right:auto;text-align:center;">Account:-<span t-esc="o.cash_op_bal"/></div>
                            <div style="margin-left:auto;margin-right:auto;text-align:center;">Date <span t-esc="o.report_date"/> </div>
                            <br/>


                        </div>


                    </t>

                </t>
            </t>
            </template>
            <report
            id="report_daily_print_report"
            string="Daily Report"
            model="daily.report"
            report_type="qweb-pdf"
            file="transaction_management.daily_print_report"
            name="transaction_management.daily_print_report"
            menu="False"
        />

    </data>
</odoo>
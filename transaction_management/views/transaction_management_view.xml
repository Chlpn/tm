<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

         <!--  Transaction master form View -->
        <record model="ir.ui.view" id="transaction_master_form">
            <field name="name">transaction.master.form</field>
            <field name="model">trans.master</field>
            <field name="arch" type="xml">
                <form string="Transaction Master" delete='false'>
                    <header>
                        <button name="post" states="draft" string="Post" type="object"/>
                        <button name="cancel" states="posted" string="Cancel" type="object"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,posted,cancel"/>
                    </header>
                    <sheet>
                    <group>
                    <field name="transaction_no" readonly="1"/>
                    </group>
                    <separator string="TRANSACTION DETAILS" colspan="4" />
                        <group colspan="4" col="4">
                            <seperator colspan="4"/>
                    <field name="transaction_date"/>
                    <field name="commission_included"/>
                    <field name="amount_to_swipe" attrs="{'readonly': [('commission_included', '=',False )]}"/>
                    <field name="machine_name" widget="selection"/>
                    <field name="amount_to_customer" attrs="{'readonly': [('commission_included', '=',True )]}"/>
                        <separator string="ADVANCED TRANSACTION DETAILS" colspan="4" />
                            <separator colspan="4"/>
                    <field name="sales_percentage"/>
                    <field name="commission" readonly="1"/>
                    <field name="cash_paid_customer"/>
                    <field name="balance" readonly="1"/>
                    <field name="customer" attrs="{'required': [('balance', '!=',0)]}"/>
                    <field name="cost_to_commission" readonly="1"/>
                    <field name="margin" readonly="1"/>
                    <field name="cost_percentage" readonly="1"/>
                    <field name="journal_ref" readonly="1"/>

                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!--  Transaction master tree View -->
        <record model="ir.ui.view" id="transaction_master_tree">
            <field name="name">transaction.master.tree</field>
            <field name="model">trans.master</field>
            <field name="arch" type="xml">
                <tree string="Transaction Master">
                    <field name="transaction_no"/>
                    <field name="transaction_date"/>
                    <field name="machine_name"/>
                    <field name="customer"/>
                    <field name="amount_to_swipe" string="Amount Swiped"/>
                    <field name="amount_to_customer"/>
                    <field name="commission"/>
                    <field name="cost_to_commission"/>
                    <field name="margin"/>
                    <field name="sales_percentage"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_transaction_master">
            <field name="name">Transactions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="context">{'readonly_by_pass': True}</field>
            <field name="res_model">trans.master</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Transactions" id="menu_transaction_master" parent="menu_transactions" sequence="2"
                  action="action_transaction_master"/>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--  Machine master form View -->
        <record model="ir.ui.view" id="machine_master_form">
            <field name="name">machine.master.form</field>
            <field name="model">machine.master</field>
            <field name="arch" type="xml">
                <form string="Machine Master" duplicate="0">
                    <header>
                        <button name="swipe_card" string="Swipe Card" type="object"/>

                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" class="oe_stat_button" type="object" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'active'}" modifiers="{}"/>
                        </button>
                        </div>
                    <group colspan="4" col="4">
                    <field name="branch" widget="selection"/>
                    <field name="name" required="1"/>
                    <field name="rent_again" groups="transaction_management.group_trans_user"/>
                    <field name="parent_name" groups="transaction_management.group_trans_user" attrs="{'invisible': [('rent_again', '=', False)],'required': [('rent_again', '=', True)]}" options="{'no_quick_create':True,'no_create_edit':True}" domain="[('rent_again', '=', False)]"/>
                    <field name="merchant_id"/>
                    <field name="terminal_id"/>
                    <field name="bank_name" required="1" groups="transaction_management.group_trans_user"/>
                    <field name="rented" groups="transaction_management.group_trans_user" attrs="{'invisible': [('rent_again', '=', True)]}" />
                    <field name="rented_from" groups="transaction_management.group_trans_user" attrs="{'invisible': ['|',('rented', '=', False),('rent_again', '=', True)],'required': [('rented', '=', True)]}" options="{'no_quick_create': True}"/>
                    <field name="sales_percentage"/>
                    <field name="cost_percentage" groups="transaction_management.group_trans_user"/>
                    <field name="merchant_bank_ac" groups="transaction_management.group_trans_user" attrs="{'invisible': ['|',('rented', '=', True),('rent_again', '=', True)],'required': [('rented', '=', False)]}" options="{'no_create': True}"/>
                    <field name="linked_bank_ac"  groups="transaction_management.group_trans_user" attrs="{'invisible': ['|',('rented', '=', True),('rent_again', '=', True)]}" options="{'no_create': True}"/>
                    <field name="cost_ac"  groups="transaction_management.group_trans_user" readonly="1"/>
                    <field name="income_ac"  groups="transaction_management.group_trans_user" readonly="1"/>
                    <field name="cash_ac"  groups="transaction_management.group_trans_user" readonly="1"/>
                    <field name="company_owned" groups="transaction_management.group_trans_user" />
                        <field name="company_id" readonly="1" invisible="1"/>

                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--  Machine master Tree View -->
        <record model="ir.ui.view" id="machine_master_tree">
            <field name="name">machine.master.tree</field>
            <field name="model">machine.master</field>
            <field name="arch" type="xml">
                <tree string="Machine Master">
                    <field name="name"/>
                    <field name="bank_name"/>
                    <field name="rented"/>
                    <field name="sales_percentage"/>
                    <field name="cost_percentage" groups="transaction_management.group_trans_user"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_machine_master">
            <field name="name">Machines</field>
            <field name="type">ir.actions.act_window</field>
            <field name="context">{'readonly_by_pass': True}</field>
            <field name="res_model">machine.master</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Machines" id="menu_machine_master" parent="menu_transaction_settings" sequence="3"
                  action="action_machine_master"/>

    </data>
</odoo>